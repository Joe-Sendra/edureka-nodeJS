<div class="container">
    <h2>Shopping List</h2>
    <table id="shoppingCartTable" class="table table-hover table-striped">
        <thead>
            <th>Product</th>
            <th>Description</th>
            <th>Size</th>
            <th>Color</th>
            <th>Price</th>
        </thead>
        <tbody>
            <% if (cart){ %>
                <% for(var i=0; i<cart.length; i++) {%>
                    <tr>
                        <td><%= cart[i].product %></td>
                        <td><%= cart[i].data.description %></td>
                        <td><%= cart[i].data.size %></td>
                        <td><%= cart[i].data.color %></td>
                        <td><%= cart[i].price %></td>
                    </tr>                            
                <% } %>
            <% } %>
        </tbody>
    </table>                       
</div>
<script type="text/javascript" src="/js/cartTable.js"></script>      
    