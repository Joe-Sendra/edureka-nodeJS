<div class="container">
    <h2>Product List</h2>
    <table id="availableProductsTable" class="table table-hover table-striped">
        <thead>
            <% if (viewonly === 'false') { %>
                <th></th>
            <% } %>
            <th>Id</th>
            <th>Product</th>
            <th>Description</th>
            <th>Size</th>
            <th>Color</th>
            <th>Price</th>
        </thead>
        <tbody>
            <% for(var i=0; i<products.length; i++) {%>
                <tr>
                    <% if (viewonly === 'false') { %>
                        <th><button class="addProductToCart" id="<%= products[i]._id %>">Add</button></th>
                    <% } %>                                      
                    <td><%= products[i]._id %></td>
                    <td><%= products[i].product %></td>
                    <td><%= products[i].data.description %></td>
                    <td><%= products[i].data.size %></td>
                    <td><%= products[i].data.color %></td>
                    <td><%= products[i].price %></td>
                </tr>                            
            <% } %>
        </tbody>
    </table>                       
</div>
<script type="text/javascript" src="/js/productTable.js"></script>      
    